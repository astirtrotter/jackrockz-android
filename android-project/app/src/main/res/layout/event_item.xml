<?xml version="1.0" encoding="utf-8"?>
<com.jackrockz.utils.TapOpacityHighlightLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/itemEvent"
        android:layout_width="match_parent"
        android:layout_height="220dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imgView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/welcome_background1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/trending_gradient_shape" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/gap_M"
            android:paddingBottom="@dimen/gap_L">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txtLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="9sp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:background="@drawable/round_text_background"
                android:text="45 LEFT"
                style="@style/Oswald_SemiBoldFont" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                style="@style/Oswald_BoldFont"
                android:text="No Highway" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txtSubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                style="@style/Oswald_BoldFont"
                android:text="Two for one!" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txtDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textColor="#e7e9eb"
                android:textSize="9sp"
                style="@style/Oswald_SemiBoldFont"
                android:text="TIME TO MURDER AND CREATE" />

        </LinearLayout>

    </RelativeLayout>

</com.jackrockz.utils.TapOpacityHighlightLayout>